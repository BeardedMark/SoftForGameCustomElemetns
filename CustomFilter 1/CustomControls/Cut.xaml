<UserControl x:Class="CustomFilter_1.CustomControls.Cut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomFilter_1.CustomControls"
             mc:Ignorable="d" 
             Height="2" Width="auto"
             Margin="0,8,0,8">
    <Grid>
        <Grid Height="1" VerticalAlignment="Top">
            <Grid.Background>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="Black" Offset="0.5"/>
                    <GradientStop Color="#00000000" Offset="1"/>
                    <GradientStop Color="#00000000"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <Grid Height="1" VerticalAlignment="Bottom">
            <Grid.Background>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#FF686868" Offset="0.5"/>
                    <GradientStop Color="#00686868" Offset="1"/>
                    <GradientStop Color="#00686868"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>

    </Grid>
</UserControl>
